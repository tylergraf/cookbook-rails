<h1>Listing recipes</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Subcategory</th>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Ingredients</th>
    <th>Directions</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.category %></td>
    <td><%= recipe.subcategory %></td>
    <td><%= recipe.title %></td>
    <td><%= recipe.subtitle %></td>
    <td><%= auto_link(recipe.ingredients) %></td>
    <td><%= auto_link(recipe.directions) %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Recipe', new_recipe_path %>
