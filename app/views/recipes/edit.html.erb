<h1>New recipe</h1>

<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">

    <label for="category"></label>
    <select name="category" id="category">
      <% @categories.each do |category| %>
      <option value="<%= category.id %>"><%= category.category %></option>
      <% end %>
    </select>
  </div>
  <div class="field">
    <%= f.label :subcategory_id %><br />
    <%= select( :recipe, "subcategory_id", @subcategories.map {|u| [u.subcategory,u.id]}) %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :recipe_image %><br />
    <%= f.file_field :recipe_image %>
  </div>
  <div class="field">
    <%= f.label :subtitle %><br />
    <%= f.text_field :subtitle %>
  </div>
  <div class="field">
    <%= f.label :ingredients %><br />
    <%= f.text_area :ingredients %>
  </div>
  <div class="field">
    <%= f.label :directions %><br />
    <%= f.text_area :directions %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Back', recipes_path %>
